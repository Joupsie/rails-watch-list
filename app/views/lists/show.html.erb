<br>
<h1><%= @list.name %></h1>
<hr>
<br>

<ul id="bookmark">
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <li><%= bookmark.movie.overview %></li>
  <% end %>
</ul>

<hr>
<%= link_to new_list_bookmark_path(@list) do %>
  <i class="fa fa-plus"></i> Nouveau film ?
<% end %>
<br>
<%= link_to lists_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
<br>
<%= link_to edit_list_path(@list.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edither le nom
<% end %>
